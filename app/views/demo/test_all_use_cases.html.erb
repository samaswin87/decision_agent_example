<!DOCTYPE html>
<html>
<head>
  <title>Test All Use Cases</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .use-case-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .use-case-card {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    .use-case-card h3 {
      color: #667eea;
      margin-bottom: 10px;
    }

    .btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px 30px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.3s;
      width: 100%;
      margin-top: 20px;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .results {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
      display: none;
      margin-top: 30px;
    }

    .loading {
      text-align: center;
      padding: 40px;
      background: white;
      border-radius: 15px;
      display: none;
    }

    .spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #667eea;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
    }

    .stat-value {
      font-size: 2.5em;
      font-weight: bold;
    }

    .result-item {
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 8px;
      border-left: 4px solid #667eea;
    }

    .passed {
      background: #d4edda;
      border-left-color: #28a745;
    }

    .failed {
      background: #f8d7da;
      border-left-color: #dc3545;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üß™ Test All Use Cases</h1>
      <p>Run automated tests on all <%= @use_cases&.length || 11 %> use cases</p>
      <a href="/demo/test_center" style="color: #667eea; text-decoration: none;">‚Üê Back to Test Center</a>
    </div>

    <div class="use-case-list">
      <% (@use_cases || []).each do |use_case| %>
        <div class="use-case-card">
          <h3><%= use_case[:name] %></h3>
          <p><%= use_case[:description] %></p>
        </div>
      <% end %>
    </div>

    <button class="btn" onclick="runAllTests()">Run All Tests</button>

    <div class="loading" id="loading">
      <div class="spinner"></div>
      <p>Running tests on all use cases...</p>
    </div>

    <div class="results" id="results">
      <h2>Test Results</h2>
      <div class="stats" id="stats"></div>
      <div id="results-list"></div>
    </div>
  </div>

  <script>
    function runAllTests() {
      document.getElementById('loading').style.display = 'block';
      document.getElementById('results').style.display = 'none';

      fetch('/demo/run_all_use_case_tests', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
        }
      })
      .then(response => response.json())
      .then(data => {
        displayResults(data);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('results').style.display = 'block';
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Failed to run tests: ' + error.message);
        document.getElementById('loading').style.display = 'none';
      });
    }

    function displayResults(data) {
      // Display stats
      const statsHtml = `
        <div class="stat-card">
          <div class="stat-value">${data.total}</div>
          <div class="stat-label">Total Tests</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
          <div class="stat-value">${data.passed}</div>
          <div class="stat-label">Passed</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);">
          <div class="stat-value">${data.failed}</div>
          <div class="stat-label">Failed</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%);">
          <div class="stat-value">${((data.passed / data.total) * 100).toFixed(1)}%</div>
          <div class="stat-label">Success Rate</div>
        </div>
      `;
      document.getElementById('stats').innerHTML = statsHtml;

      // Display results
      const resultsHtml = data.results.map(result => {
        const statusClass = result.status === 'passed' ? 'passed' : 'failed';
        const statusIcon = result.status === 'passed' ? '‚úÖ' : '‚ùå';

        return `
          <div class="result-item ${statusClass}">
            <strong>${statusIcon} ${result.use_case}</strong>
            ${result.status === 'passed'
              ? `<span style="float: right; color: #666;">${result.duration_ms}ms</span>`
              : `<br><span style="color: #dc3545;">Error: ${result.error}</span>`
            }
          </div>
        `;
      }).join('');

      document.getElementById('results-list').innerHTML = resultsHtml;
    }
  </script>
</body>
</html>
