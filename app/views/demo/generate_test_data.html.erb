<!DOCTYPE html>
<html>
<head>
  <title>Test Data Generator</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .header {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .header h1 {
      color: #333;
      margin-bottom: 10px;
    }

    .generator-form {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      font-weight: 600;
      margin-bottom: 8px;
      color: #333;
    }

    select, input {
      width: 100%;
      padding: 12px;
      border: 2px solid #ddd;
      border-radius: 8px;
      font-size: 16px;
    }

    .btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px 30px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.3s;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .results {
      background: white;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
      display: none;
    }

    .data-preview {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      max-height: 500px;
      overflow-y: auto;
      margin-top: 20px;
    }

    pre {
      margin: 0;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
    }

    .stat-value {
      font-size: 2.5em;
      font-weight: bold;
    }

    .stat-label {
      font-size: 0.9em;
      opacity: 0.9;
      margin-top: 5px;
    }

    .loading {
      text-align: center;
      padding: 40px;
      display: none;
    }

    .spinner {
      border: 4px solid #f3f3f3;
      border-top: 4px solid #667eea;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .action-buttons {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }

    .btn-secondary {
      background: #6c757d;
    }

    .btn-success {
      background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üé≤ Test Data Generator</h1>
      <p>Generate realistic test data for all DecisionAgent use cases</p>
      <a href="/demo/test_center" style="color: #667eea; text-decoration: none;">‚Üê Back to Test Center</a>
    </div>

    <div class="generator-form">
      <h2>Generate Data</h2>

      <div class="form-group">
        <label for="data_type">Data Type</label>
        <select id="data_type">
          <% (@data_types || [{id: 'loan', name: 'Loan Applications', count: 100}, {id: 'fraud', name: 'Fraud Transactions', count: 100}, {id: 'discount', name: 'Discount Orders', count: 100}, {id: 'all', name: 'All Use Cases', count: 500}]).each do |type| %>
            <option value="<%= type[:id] %>"><%= type[:name] %> (<%= type[:count] %> records)</option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="count">Number of Records</label>
        <input type="number" id="count" value="100" min="1" max="10000">
      </div>

      <button class="btn" onclick="generateData()">Generate Data</button>
    </div>

    <div class="loading" id="loading">
      <div class="spinner"></div>
      <p>Generating test data...</p>
    </div>

    <div class="results" id="results">
      <h2>Generated Data</h2>

      <div class="stats" id="stats"></div>

      <div class="action-buttons">
        <button class="btn btn-success" onclick="downloadJSON()">üì• Download JSON</button>
        <button class="btn btn-secondary" onclick="downloadCSV()">üìä Download CSV</button>
        <button class="btn" onclick="copyToClipboard()">üìã Copy to Clipboard</button>
      </div>

      <div class="data-preview">
        <pre id="data_content"></pre>
      </div>
    </div>
  </div>

  <script>
    let generatedData = null;

    function generateData() {
      const dataType = document.getElementById('data_type').value;
      const count = document.getElementById('count').value;

      document.getElementById('loading').style.display = 'block';
      document.getElementById('results').style.display = 'none';

      fetch('/demo/create_test_data', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
        },
        body: JSON.stringify({ data_type: dataType, count: count })
      })
      .then(response => response.json())
      .then(data => {
        generatedData = data;
        displayResults(data);
        document.getElementById('loading').style.display = 'none';
        document.getElementById('results').style.display = 'block';
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Failed to generate data: ' + error.message);
        document.getElementById('loading').style.display = 'none';
      });
    }

    function displayResults(data) {
      // Display stats
      const statsHtml = `
        <div class="stat-card">
          <div class="stat-value">${data.count}</div>
          <div class="stat-label">Records Generated</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">${data.data_type}</div>
          <div class="stat-label">Data Type</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">${new Date().toLocaleTimeString()}</div>
          <div class="stat-label">Generated At</div>
        </div>
      `;
      document.getElementById('stats').innerHTML = statsHtml;

      // Display data preview
      document.getElementById('data_content').textContent = JSON.stringify(data.data, null, 2);
    }

    function downloadJSON() {
      if (!generatedData) return;

      const blob = new Blob([JSON.stringify(generatedData.data, null, 2)], { type: 'application/json' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `test_data_${generatedData.data_type}_${Date.now()}.json`;
      a.click();
      URL.revokeObjectURL(url);
    }

    function downloadCSV() {
      if (!generatedData || !generatedData.data.length) return;

      // Convert to CSV
      const headers = Object.keys(generatedData.data[0].context);
      const rows = generatedData.data.map(item => {
        return headers.map(h => JSON.stringify(item.context[h] || '')).join(',');
      });

      const csv = [headers.join(','), ...rows].join('\n');

      const blob = new Blob([csv], { type: 'text/csv' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `test_data_${generatedData.data_type}_${Date.now()}.csv`;
      a.click();
      URL.revokeObjectURL(url);
    }

    function copyToClipboard() {
      if (!generatedData) return;

      const text = JSON.stringify(generatedData.data, null, 2);
      navigator.clipboard.writeText(text).then(() => {
        alert('Data copied to clipboard!');
      }).catch(err => {
        console.error('Failed to copy:', err);
      });
    }
  </script>
</body>
</html>
