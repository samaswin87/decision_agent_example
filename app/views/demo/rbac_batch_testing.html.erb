<!DOCTYPE html>
<html>
<head>
  <title>RBAC Batch Testing</title>
  <meta name="csrf-token" content="<%= form_authenticity_token %>">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
      color: #333;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
    }

    .header {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .header h1 {
      color: #667eea;
      margin-bottom: 10px;
    }

    .header p {
      color: #666;
      margin-bottom: 15px;
    }

    .card {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card h2 {
      color: #667eea;
      margin-bottom: 20px;
      font-size: 24px;
    }

    .card h3 {
      color: #555;
      margin-bottom: 15px;
      font-size: 18px;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-weight: 600;
      margin-bottom: 8px;
      color: #333;
    }

    .form-control {
      width: 100%;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 14px;
      transition: border-color 0.3s;
    }

    .form-control:focus {
      outline: none;
      border-color: #667eea;
    }

    .checkbox-group {
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .checkbox-group input[type="checkbox"] {
      width: 20px;
      height: 20px;
      cursor: pointer;
    }

    .btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 15px 30px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .btn-secondary {
      background: #95a5a6;
    }

    .progress-container {
      display: none;
      margin-top: 20px;
    }

    .progress-bar {
      width: 100%;
      height: 30px;
      background: #ecf0f1;
      border-radius: 15px;
      overflow: hidden;
      margin-bottom: 10px;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
      width: 0%;
      transition: width 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 12px;
    }

    .results-container {
      display: none;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
    }

    .stat-card h4 {
      font-size: 14px;
      opacity: 0.9;
      margin-bottom: 10px;
    }

    .stat-card .value {
      font-size: 32px;
      font-weight: 700;
    }

    .role-stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }

    .role-stat-card {
      background: #f8f9fa;
      padding: 15px;
      border-radius: 8px;
      border-left: 4px solid #667eea;
    }

    .role-stat-card h5 {
      color: #667eea;
      margin-bottom: 10px;
    }

    .role-stat-card .stat-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
      font-size: 14px;
    }

    .results-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }

    .results-table th,
    .results-table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #e0e0e0;
    }

    .results-table th {
      background: #f8f9fa;
      font-weight: 600;
      color: #667eea;
    }

    .results-table tr:hover {
      background: #f8f9fa;
    }

    .badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 600;
    }

    .badge-allowed {
      background: #2ecc71;
      color: white;
    }

    .badge-denied {
      background: #e74c3c;
      color: white;
    }

    .badge-requires-approval {
      background: #f39c12;
      color: white;
    }

    .loading {
      display: inline-block;
      width: 20px;
      height: 20px;
      border: 3px solid #f3f3f3;
      border-top: 3px solid #667eea;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .alert {
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    .alert-info {
      background: #d1ecf1;
      color: #0c5460;
      border-left: 4px solid #17a2b8;
    }

    .alert-success {
      background: #d4edda;
      color: #155724;
      border-left: 4px solid #28a745;
    }

    .alert-error {
      background: #f8d7da;
      color: #721c24;
      border-left: 4px solid #dc3545;
    }

    .role-distribution {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
      margin-top: 15px;
    }

    .role-dist-item {
      display: flex;
      flex-direction: column;
    }

    .role-dist-item label {
      font-size: 12px;
      margin-bottom: 5px;
    }

    .role-dist-item input {
      width: 100%;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üîê RBAC Batch Testing</h1>
      <p>Test Role-Based Access Control with batch processing. Evaluate multiple access requests across different roles and actions.</p>
      <a href="/demo/test_center" style="color: #667eea; text-decoration: none;">‚Üê Back to Test Center</a>
    </div>

    <!-- Configuration Card -->
    <div class="card">
      <h2>‚öôÔ∏è Test Configuration</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label>Batch Size</label>
          <input type="number" id="batch_size" class="form-control" value="100" min="1" max="10000">
        </div>

        <div class="form-group">
          <label>Processing Mode</label>
          <select id="parallel" class="form-control">
            <option value="false">Sequential</option>
            <option value="true">Parallel</option>
          </select>
        </div>
      </div>

      <div class="form-group">
        <label>Role Distribution (percentages must sum to 100%)</label>
        <div class="role-distribution">
          <div class="role-dist-item">
            <label>Admin</label>
            <input type="number" id="role_admin" class="form-control" value="10" min="0" max="100" step="1">
          </div>
          <div class="role-dist-item">
            <label>Manager</label>
            <input type="number" id="role_manager" class="form-control" value="20" min="0" max="100" step="1">
          </div>
          <div class="role-dist-item">
            <label>Analyst</label>
            <input type="number" id="role_analyst" class="form-control" value="30" min="0" max="100" step="1">
          </div>
          <div class="role-dist-item">
            <label>Viewer</label>
            <input type="number" id="role_viewer" class="form-control" value="20" min="0" max="100" step="1">
          </div>
          <div class="role-dist-item">
            <label>Operator</label>
            <input type="number" id="role_operator" class="form-control" value="20" min="0" max="100" step="1">
          </div>
        </div>
        <small style="color: #666; margin-top: 5px; display: block;">Total: <span id="role_total">100</span>%</small>
      </div>

      <div class="form-group">
        <div class="checkbox-group">
          <input type="checkbox" id="show_details" checked>
          <label for="show_details" style="margin: 0;">Show detailed results table</label>
        </div>
      </div>

      <button class="btn" id="runTestBtn" onclick="runBatchTest()">
        üöÄ Run RBAC Batch Test
      </button>
    </div>

    <!-- Progress Card -->
    <div class="card progress-container" id="progressCard">
      <h3>‚è≥ Processing...</h3>
      <div class="progress-bar">
        <div class="progress-fill" id="progressFill">0%</div>
      </div>
      <p id="progressText" style="text-align: center; margin-top: 10px; color: #666;"></p>
    </div>

    <!-- Results Card -->
    <div class="card results-container" id="resultsCard">
      <h2>üìä Test Results</h2>
      
      <div id="errorMessage" class="alert alert-error" style="display: none;"></div>

      <!-- Statistics -->
      <div class="stats-grid" id="statsGrid">
        <!-- Stats will be populated here -->
      </div>

      <!-- Role Statistics -->
      <div id="roleStatsContainer">
        <h3>üìà Role-Based Statistics</h3>
        <div class="role-stats" id="roleStats">
          <!-- Role stats will be populated here -->
        </div>
      </div>

      <!-- Performance Metrics -->
      <div style="margin-top: 30px;">
        <h3>‚ö° Performance Metrics</h3>
        <div class="stats-grid" id="performanceStats">
          <!-- Performance stats will be populated here -->
        </div>
      </div>

      <!-- Detailed Results Table -->
      <div id="resultsTableContainer" style="margin-top: 30px;">
        <h3>üìã Detailed Results</h3>
        <div style="max-height: 500px; overflow-y: auto;">
          <table class="results-table" id="resultsTable">
            <thead>
              <tr>
                <th>User ID</th>
                <th>Role</th>
                <th>Action</th>
                <th>Decision</th>
                <th>Confidence</th>
                <th>Reason</th>
              </tr>
            </thead>
            <tbody id="resultsTableBody">
              <!-- Results will be populated here -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Update role distribution total
    function updateRoleTotal() {
      const roles = ['admin', 'manager', 'analyst', 'viewer', 'operator'];
      let total = 0;
      roles.forEach(role => {
        const value = parseInt(document.getElementById(`role_${role}`).value) || 0;
        total += value;
      });
      document.getElementById('role_total').textContent = total;
      
      if (total !== 100) {
        document.getElementById('role_total').style.color = '#e74c3c';
        document.getElementById('role_total').style.fontWeight = 'bold';
      } else {
        document.getElementById('role_total').style.color = '#666';
        document.getElementById('role_total').style.fontWeight = 'normal';
      }
    }

    // Add event listeners for role distribution
    ['admin', 'manager', 'analyst', 'viewer', 'operator'].forEach(role => {
      document.getElementById(`role_${role}`).addEventListener('input', updateRoleTotal);
    });

    // Initialize
    updateRoleTotal();

    function runBatchTest() {
      const btn = document.getElementById('runTestBtn');
      const progressCard = document.getElementById('progressCard');
      const resultsCard = document.getElementById('resultsCard');
      const errorMessage = document.getElementById('errorMessage');

      // Validate role distribution
      const roles = ['admin', 'manager', 'analyst', 'viewer', 'operator'];
      let total = 0;
      const roleDistribution = {};
      roles.forEach(role => {
        const value = parseInt(document.getElementById(`role_${role}`).value) || 0;
        roleDistribution[role] = value / 100;
        total += value;
      });

      if (total !== 100) {
        errorMessage.textContent = `Role distribution must sum to 100%. Current total: ${total}%`;
        errorMessage.style.display = 'block';
        return;
      }

      // Hide previous results
      resultsCard.style.display = 'none';
      errorMessage.style.display = 'none';

      // Show progress
      progressCard.style.display = 'block';
      btn.disabled = true;
      btn.innerHTML = '<span class="loading"></span> Running...';

      // Update progress
      let progress = 0;
      const progressInterval = setInterval(() => {
        progress = Math.min(progress + 5, 90);
        document.getElementById('progressFill').style.width = progress + '%';
        document.getElementById('progressFill').textContent = progress + '%';
      }, 200);

      const params = {
        batch_size: parseInt(document.getElementById('batch_size').value),
        parallel: document.getElementById('parallel').value === 'true',
        role_distribution: roleDistribution,
        show_details: document.getElementById('show_details').checked
      };

      fetch('/demo/rbac_batch_test', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
        },
        body: JSON.stringify(params)
      })
      .then(response => response.json())
      .then(data => {
        clearInterval(progressInterval);
        document.getElementById('progressFill').style.width = '100%';
        document.getElementById('progressFill').textContent = '100%';
        
        setTimeout(() => {
          progressCard.style.display = 'none';
          displayResults(data);
          btn.disabled = false;
          btn.innerHTML = 'üöÄ Run RBAC Batch Test';
        }, 500);
      })
      .catch(error => {
        clearInterval(progressInterval);
        progressCard.style.display = 'none';
        errorMessage.textContent = 'Error: ' + error.message;
        errorMessage.style.display = 'block';
        btn.disabled = false;
        btn.innerHTML = 'üöÄ Run RBAC Batch Test';
      });
    }

    function displayResults(data) {
      const resultsCard = document.getElementById('resultsCard');
      const statsGrid = document.getElementById('statsGrid');
      const roleStats = document.getElementById('roleStats');
      const performanceStats = document.getElementById('performanceStats');
      const resultsTableBody = document.getElementById('resultsTableBody');
      const resultsTableContainer = document.getElementById('resultsTableContainer');

      // Show results card
      resultsCard.style.display = 'block';

      // Display main statistics
      const stats = data.statistics || {};
      statsGrid.innerHTML = `
        <div class="stat-card">
          <h4>Total Evaluations</h4>
          <div class="value">${stats.total_evaluations || 0}</div>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);">
          <h4>Allowed</h4>
          <div class="value">${stats.allowed || 0}</div>
          <small>${stats.allowed_percentage || 0}%</small>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);">
          <h4>Denied</h4>
          <div class="value">${stats.denied || 0}</div>
          <small>${stats.denied_percentage || 0}%</small>
        </div>
        <div class="stat-card" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);">
          <h4>Requires Approval</h4>
          <div class="value">${stats.requires_approval || 0}</div>
        </div>
      `;

      // Display role statistics
      const roleStatsData = stats.role_statistics || {};
      roleStats.innerHTML = Object.entries(roleStatsData).map(([role, roleData]) => `
        <div class="role-stat-card">
          <h5>${role.charAt(0).toUpperCase() + role.slice(1)}</h5>
          <div class="stat-row">
            <span>Total:</span>
            <strong>${roleData.total || 0}</strong>
          </div>
          <div class="stat-row">
            <span>Allowed:</span>
            <strong style="color: #2ecc71;">${roleData.allowed || 0}</strong>
          </div>
          <div class="stat-row">
            <span>Denied:</span>
            <strong style="color: #e74c3c;">${roleData.denied || 0}</strong>
          </div>
          <div class="stat-row">
            <span>Requires Approval:</span>
            <strong style="color: #f39c12;">${roleData.requires_approval || 0}</strong>
          </div>
        </div>
      `).join('');

      // Display performance metrics
      const perf = data.performance || {};
      performanceStats.innerHTML = `
        <div class="stat-card">
          <h4>Duration</h4>
          <div class="value">${perf.duration_seconds || 0}s</div>
        </div>
        <div class="stat-card">
          <h4>Avg per Evaluation</h4>
          <div class="value">${perf.average_per_evaluation_ms || 0}ms</div>
        </div>
        <div class="stat-card">
          <h4>Throughput</h4>
          <div class="value">${perf.evaluations_per_second || 0}/s</div>
        </div>
        <div class="stat-card">
          <h4>Mode</h4>
          <div class="value" style="font-size: 24px;">${perf.parallel ? '‚ö° Parallel' : '‚û°Ô∏è Sequential'}</div>
        </div>
      `;

      // Display detailed results table
      if (document.getElementById('show_details').checked && data.results) {
        resultsTableBody.innerHTML = data.results.slice(0, 100).map(result => {
          const ctx = result.context || {};
          const decision = result.decision || 'denied';
          const badgeClass = decision === 'allowed' ? 'badge-allowed' : 
                            decision === 'denied' ? 'badge-denied' : 
                            'badge-requires-approval';
          
          return `
            <tr>
              <td>${ctx.user_id || 'N/A'}</td>
              <td><strong>${ctx.user_role || 'N/A'}</strong></td>
              <td>${ctx.action || 'N/A'}</td>
              <td><span class="badge ${badgeClass}">${decision}</span></td>
              <td>${(result.confidence * 100).toFixed(1)}%</td>
              <td>${result.explanations?.[0] || 'N/A'}</td>
            </tr>
          `;
        }).join('');
        resultsTableContainer.style.display = 'block';
      } else {
        resultsTableContainer.style.display = 'none';
      }
    }
  </script>
</body>
</html>

