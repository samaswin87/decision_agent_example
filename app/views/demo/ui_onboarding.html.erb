<div style="max-width: 800px; margin: 50px auto; padding: 20px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;">
  <h1>UI Dashboard - Customer Onboarding</h1>
  <p style="color: #666;">Demonstrates real-time UI feedback and decision visualization</p>

  <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; margin: 20px 0;">
    <h2>Evaluate Applicant</h2>

    <%= form_with url: demo_ui_onboarding_path, method: :post, local: true do |f| %>
      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Name:</label>
        <%= f.text_field :name, value: "John Doe", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Email:</label>
        <%= f.email_field :email, value: "john@example.com", style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Credit Score (550-850):</label>
        <%= f.number_field :credit_score, value: 720, min: 550, max: 850, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Annual Income ($):</label>
        <%= f.number_field :annual_income, value: 65000, step: 1000, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Employment Years:</label>
        <%= f.number_field :employment_years, value: 3, min: 0, max: 50, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">
          <%= f.check_box :existing_customer, style: "margin-right: 5px;" %>
          Existing Customer
        </label>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">Fraud Risk Score (0-100):</label>
        <%= f.number_field :fraud_risk_score, value: 15, min: 0, max: 100, style: "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <label style="display: block; margin-bottom: 5px; font-weight: 500;">
          <%= f.check_box :with_progress, style: "margin-right: 5px;" %>
          Show Progress Steps
        </label>
      </div>

      <%= f.submit "Evaluate Application", style: "background: #007bff; color: white; padding: 12px 24px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
    <% end %>
  </div>

  <% if @result %>
    <div style="background: #e7f5e7; padding: 20px; border-radius: 8px; margin: 20px 0; border-left: 4px solid #28a745;">
      <h2>Decision Result</h2>
      <pre style="background: white; padding: 15px; border-radius: 4px; overflow: auto;"><%= JSON.pretty_generate(@result) %></pre>
    </div>
  <% end %>

  <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #ddd;">
    <h3>API Endpoints</h3>
    <ul style="line-height: 2;">
      <li><strong>POST /demo/ui_onboarding</strong> - Evaluate single applicant</li>
      <li><strong>POST /demo/ui_batch_process</strong> - Batch process multiple applicants</li>
      <li><strong>GET /demo/ui_metrics</strong> - Get dashboard metrics</li>
    </ul>

    <h3 style="margin-top: 30px;">Example cURL</h3>
    <pre style="background: #f8f9fa; padding: 15px; border-radius: 4px; overflow: auto;">curl -X POST <%= request.base_url %>/demo/ui_onboarding \
  -H "Content-Type: application/json" \
  -d '{"name":"Jane Doe","credit_score":750,"annual_income":80000,"employment_years":5,"existing_customer":true,"fraud_risk_score":10}'</pre>

    <p style="margin-top: 30px;">
      <%= link_to "â† Back to All Use Cases", demo_all_use_cases_path, style: "color: #007bff; text-decoration: none;" %>
    </p>
  </div>
</div>
